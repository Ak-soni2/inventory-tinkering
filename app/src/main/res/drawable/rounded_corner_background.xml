    xmlns:tools="http://schemas.android.com/tools"
    android:shape="rectangle"
    tools:ignore="ExtraText">
    <solid android:color="@color/white" /> <!-- Background color -->
    <corners android:radius="8dp" /> <!-- Corner radius -->
    <stroke
        android:width="2dp">

    </stroke> <!-- Border width -->
    <solid android:color="@color/darker_blue" /> <!-- Border color -->
</shape>
