<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Include your Scrollable Column content here -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Get INSPIRED to,"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginTop="2dp"
                    android:paddingStart="20dp"
                    android:paddingTop="0dp"
                    android:paddingEnd="0dp"
                    android:paddingBottom="0dp"
                    android:fontFamily="sans-serif" />

            </LinearLayout>

            <!-- Row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing=".005"
                    android:layout_marginRight="20dp"
                    android:text="Tinkering, Building and Innovating"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:paddingStart="20dp"
                    android:paddingTop="0dp"
                    android:paddingEnd="0dp"
                    android:paddingBottom="0dp"
                    android:fontFamily="sans-serif"
                    android:layout_marginTop="10dp" />

            </LinearLayout>

            <!-- Row 3 with Image and Text -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="25dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/textDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The Tinkering Lab at IIT Jodhpur is a creative lab that fosters creativity and problem-solving skills.Tinkering is a place where the great minds combine and shape their imagination"
                    android:letterSpacing=".005"
                    android:textSize="20sp"
                    android:paddingStart="20dp"
                    android:paddingTop="0dp"
                    android:paddingEnd="15dp"
                    android:paddingBottom="0dp"
                    android:fontFamily="sans-serif" />
<!--                    android:textColor="@color/black"-->

            </RelativeLayout>

            <!-- Row 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vision and Goals"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="0dp"
                    android:paddingBottom="0dp"
                    android:fontFamily="sans-serif" />

            </LinearLayout>

            <!-- Row 5 with Image -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/stair_successs_girl"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:paddingStart="20dp"/>

            </LinearLayout>

            <!-- Row 6 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The lab is designed as a complete space that encourages people to think, design, and prototype specific solutions. Our goal is to empower people to turn their knowledge into practical application and tangible results."
                    android:textSize="20sp"
                    android:paddingStart="20dp"
                    android:paddingTop="20dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="20dp"
                    android:fontFamily="sans-serif" />
<!--                    android:textColor="@color/black"-->

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
